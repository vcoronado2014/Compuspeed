<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<CheckBox
		    android:id="@+id/checkBox1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Usa barra de velocimetro" />

		<CheckBox
		    android:id="@+id/chkUsaAnalogo"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Usa Análogo" />

		<CheckBox
		    android:id="@+id/chkMuestraLlamadas"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Muestra LLamadas Perdidas" />

		<CheckBox
		    android:id="@+id/chkMuestraSMS"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Muestra SMS No leídos" />

		<Button
		    android:id="@+id/btnEmail"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="guardar" />

	</LinearLayout>

</RelativeLayout>
