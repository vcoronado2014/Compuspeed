<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.compuspeed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="#3A01DF"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SpeedActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top" >

            <Chronometer
                android:id="@+id/chronometer1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Chronometer"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="left"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prom:"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtPromedioActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FFFFFF" />

            <DigitalClock
                android:id="@+id/digitalClock1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DigitalClock"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <WebView
                android:id="@+id/webView2"
                android:layout_width="250dp"
                android:layout_height="match_parent" />

            <WebView
                android:id="@+id/webViewL"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_weight="1.00" />

            <WebView
                android:id="@+id/webView1"
                android:layout_width="180dp"
                android:layout_height="130dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imgBateriaPrincipal"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bateria_100" />

            <TextView
                android:id="@+id/txtCargaBateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="6dp"
                android:text="0"
                android:textColor="#0B0B3B"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButtonGmaps"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/icono_googlemaps" />

            <ImageButton
                android:id="@+id/imageButtonFono"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/icono_fono" />

            <ImageView
                android:id="@+id/imgGps"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/gps_inactivo" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="GPS"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora act."
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txtTActualizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <TextView
            android:id="@+id/lblVelocidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center|bottom"
            android:text="Esperando..."
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lblDireccion2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Esperando..."
            android:textColor="#FFFFFF"
            android:textSize="15dp" />


</LinearLayout>